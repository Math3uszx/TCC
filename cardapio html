<script>
    // Função para verificar se pelo menos um checkbox foi selecionado
    function verificarCheckboxes() {
        // Seleciona todos os checkboxes com o nome "produto[]"
        const checkboxesMarcados = document.querySelectorAll('input[name="produto[]"]:checked');
        // Retorna true se houver algum checkbox marcado, false caso contrário
        return checkboxesMarcados.length > 0;
    }

    // Função para salvar o pedido e redirecionar
    function salvarPedido() {
        // Verifica se pelo menos um checkbox foi marcado
        if (verificarCheckboxes()) {
            const checkboxes = document.querySelectorAll('input[name="produto[]"]:checked'); 
            let pedido = [];

            // Armazena os valores dos itens selecionados no pedido
            checkboxes.forEach(function(checkbox) {
                const item = {
                    nome: checkbox.getAttribute('data-nome'),  // Nome do item armazenado no atributo 'data-nome'
                    preco: parseFloat(checkbox.getAttribute('data-preco'))  // Preço armazenado no atributo 'data-preco'
                };
                pedido.push(item);
            });

            // Armazena o pedido no localStorage
            localStorage.setItem('pedido', JSON.stringify(pedido));

            // Redireciona para a página de confirmação
            window.location.href = 'confirmação.html';
        } else {
            alert('Por favor, selecione pelo menos um produto!');
        }
    }

    // Função para alternar a visibilidade das seções do menu
    function toggleOptions(optionsId, icon) {
        const optionsDiv = document.getElementById(optionsId);
        optionsDiv.classList.toggle('hidden');
        if (optionsDiv.classList.contains('hidden')) {
            icon.setAttribute('aria-expanded', 'false');
        } else {
            icon.setAttribute('aria-expanded', 'true');
        }
    }
</script>

<div class="botao-acao">
    <button class="btn-pedido" onclick="salvarPedido()">Finalizar Pedido</button>
</div>
